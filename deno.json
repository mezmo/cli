{
  "tasks": {
    "local": {
      "description": "Run the main command with environment vairables loaded from 'env/local'",
      "command": "deno run --env-file=env/local.env --allow-env --allow-net --allow-sys --allow-read --allow-write --unstable-kv main.ts"
    }
  },
  "exports": "./main.ts",
  "workspace": [
    "./@mzm/log",
    "./@mzm/core",
    "./@mzm/command-log",
    "./@mzm/command-config",
    "./@mzm/config"
  ],
  "fmt": {
    "useTabs": false,
    "indentWidth": 2,
    "lineWidth": 110,
    "spaceSurroundingProperties": false,
    "singleQuote": true,
    "semiColons": false
  },
  "compile": {
    "permissions": {
      "env": true,
      "net": true,
      "read": true,
      "write": true,
      "sys": true
    }
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/crypto": "jsr:@std/crypto@^1.0.5",
    "@std/encoding": "jsr:@std/encoding@^1.0.10"
  }
}
